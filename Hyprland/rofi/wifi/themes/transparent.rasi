
@theme "/dev/null"

* {
    bg: rgba(0, 0, 0, 0.35);
    fg: #f8f8f6;
    al: #b4befe;
    border-radius: 10px;
    background-color: @bg;
    text-color: #c6a0f6;
    font: "JetBrainsMono Nerd Font 12";
    }

window {
    location:northwest;
    border: 2px;
    border-color: rgba(77, 77, 77, 1);
    width: 20%;
    children: [ box ];
}

box {
    children: [ entry, listview ];
}

entry {
	padding : 0 0 0 48;
  placeholder: "    Search...";
  placeholder-color: @fg;
  expand: false;
	border-color: rgba(77, 77, 77, 0.5);
  border: 0 0 1 0;
  text-color: @fg;
}

element {
    text-color: @fg;
}

element selected {
    text-color: @al;
    text-decoration:underline;
}

element-text, element-icon {
    background-color: inherit;
    text-color: inherit;
}

listview {
    fixed-height: false;
    padding: 0;
    scrollbar: true;
}



listview, element, element selected, element-text, element-icon {
    cursor: pointer;
}
